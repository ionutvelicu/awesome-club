---
import StartForm from '../components/user/StartForm';
import BaseLayout from '../layouts/BaseLayout.astro';
import auth from "../assets/auth.jpg";

const { searchParams } = Astro.url;
const author = searchParams.get('author');
---

<BaseLayout title="Start">
  <div class="auth-page">
    <div class="img" style={`background-image: url(${auth.src});`}></div>
    <div class="ctn">
      <div class="data">
        <h1>Create an Account</h1>
      
        <StartForm author={!!author} client:load />
        
        <div class="links">
          <p>
            Already have an account? <a href="/login">Sign in</a>
          </p>
        </div>
        
        <p class="terms">
          By signing up, you agree to our <a href="/terms">Terms of Service</a> and 
          <a href="/privacy">Privacy Policy</a>.
        </div>
      </div>
    </div>
  </div>
</BaseLayout>