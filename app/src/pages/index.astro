---
import Layout from "../layouts/Layout.astro";
import StartCtaBtn from "../components/btn/StartCtaBtn";
import "../styles/welcome.scss";
import hero from "../assets/hero.png"
---

<Layout title="Monetize your Knowledge">
  <div class="hero">
    <div class="cta">
      <h1>Monetize</h1>
      <h2>Your Knowledge</h2>
      <p>
        The easiest way to monetize your expertise
        <br />
        by selling digital products and memberships.
        <br />
        Teach. Sell. Earn.
      </p>
      <StartCtaBtn client:load />
    </div>

    <img src={hero.src} alt="hero" />
  </div>
</Layout>
